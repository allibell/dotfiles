function dfn {
    prefix="data/users/abellows"
    for n in $@
    do
        if [ -f "$n" ] ; then
            full_path=$(realpath $n)
            base_path=${full_path#*"$prefix/"}
            repo=${base_path%%/*}
            file_path=${base_path#*"$repo/"}

            case $repo in
                configerator)
                    dfn_repo="CF"
                    ;;
                configerator-dsi)
                    dfn_repo="CFDSI"
                    ;;
                fbsource)
                    dfn_repo="FBS"
                    ;;
                opsfiles)
                    dfn_repo="OPSFILES"
                    ;;
                *)
                    echo "unknown repo '$n'"
                    return 1
                    ;;
            esac
        else
            echo "'$n' - file does not exist"
            return 1
        fi
        dfn_link="https://www.internalfb.com/intern/diffusion/$dfn_repo/browse/master/$file_path"
        echo "$dfn_link"
    done
    return 0
}

function buck_targets {
    for n in $@
    do
        if [ -f "$n/TARGETS" ] ; then
            echo "---- Buck targets in $n: ----"
            cat "$n/TARGETS" G "(?<=name\s=\s).*(?=,)" -P -C 2
            echo "---- ---- ---- ---- ---- ----"
        else
            echo "'$n/TARGETS' - file does not exist"
            return 1
        fi
    done
    return 0
}


