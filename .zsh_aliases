# 'deja vu'  - search shell history
function djv {
    for n in $@
    do
        echo "trying $n"
        sgrep "$n" ~/.zsh_history
    done
}
function djvi {
    for n in $@
    do
        echo "trying $n"
        sgrepi "$n" ~/.zsh_history
    done
}

